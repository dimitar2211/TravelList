    <div class="col-md-12">
        <h3>Our Partners</h3>
        <p>We work with trusted travel agencies and partners to ensure the best experience for your vacation.</p>
    </div>
</div>


<script>
    // Добавяне на функционалност за бутона "Learn More"
    document.getElementById('helloButton').addEventListener('click', function() {
        var description = document.getElementById('description');
        if (description.style.display === 'none') {
            description.style.display = 'block';
            description.style.opacity = 0; // Начална непрозрачност
            var opacity = 0;
            var fadeInInterval = setInterval(function() {
                if (opacity < 1) {
                    opacity += 0.05; // Увеличава непрозрачността постепенно
                    description.style.opacity = opacity;
                } else {
                    clearInterval(fadeInInterval);
                }
            }, 50); // Всеки 50 милисекунди увеличаваме стойността на opacity
        } else {
            var fadeOutInterval = setInterval(function() {
                if (opacity > 0) {
                    opacity -= 0.05;
                    description.style.opacity = opacity;
                } else {
                    description.style.display = 'none';
                    clearInterval(fadeOutInterval);
                }
            }, 50); // Всеки 50 милисекунди намаляваме стойността на opacity
        }
    });
</script>
